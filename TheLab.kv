PageLayoutExample:

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    GridLayoutExample:
    AnchorLayoutExample:


<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:
    # left -right top-bottom
    # oritentation: "lr-bt" 
    # padding: ("20dp", "20dp", "20dp", "20dp")
    # spacing : "20dp", "20dp"
    

<GridLayoutExample@GridLayout>
    # rows
    # cols
    rows:2
    cols:3
    Button:
        text: "A"
        size_hint: None , 1
        width: "60dp"
    BoxLayoutExample:
        Button:
            text: "B"
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None , 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample@AnchorLayout>

    # right , left , center
    anchor_x : "center"
    # bottom , top , center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2,.1
        Button:
            text : "A"
        Button:
            text: "B"

<BoxLayoutExample>:

    orientation: "horizontal"

    Button: 
        text: "A"
        size_hint: .5, .5 
        # size: "100dp","60dp"
        # width : "100dp"
        # height : "60dp" 
        # x, center_x, right 
        # pos_hint : {"centre_y": .5}
    BoxLayout:
        orientation: "vertical"
        spacing:"10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text: "C"



<MainWidget>:
    Button: 
        text: "Hello"
        size: "300dp", "200dp"  # dp means density pixel. It adjusts the size of buttons/labels based on the size of the screen
        pos: "100dp", "200dp"
        color: 0 , 0 , 0, 1
    Label: 
        text: "Hello2"
        size: "300dp", "200dp"
        pos: "200dp", "400dp"
        color: 1 , 0 , 0, 1
    Button: 
        text: "Click Here!"
        size: 100, 100
        pos: 600, 700
        color: 1 , 0 , 0, 1
